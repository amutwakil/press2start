<main>
  <section>
    <h2>Search: <%= @query %></h2>
    <% case @games %>
    <% when "too short" %>
      <h2> Sorry! </h2>
      <%= image_tag "icons/bmc computer.jpg" %>
      <p>I can't search with such a short query.</p>
      <p>Please try to enter the title (or part of it) of the game</p>
    <% when "no reviews" %>
      <h2> Sorry! </h2>
      <%= image_tag "icons/bmc computer.jpg" %>
      <p>I didn't find anything matching this title.</p>
      <h3>Search: <%= @query %></h3>
      <p>Please try again.</p>
    <% else %>
      <%= render partial: "/games/shared/tiny_show", locals: {games: @games} %>
    <%end %>
  </section>
</main>
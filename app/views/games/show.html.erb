<h1><%= @game.title %></h1>
<p>Platform: <%= @game.platform.name %></p>
<div class="flexbox">
  <p>Year: <%= @game.year %></p>
  <p>Genre: <%= @game.genre.name %></p>
  <div>
    Rating: <% @game.game_ratings.each do |rating| %>
      <ul>
        <li>
          <%= rating.game_rating_combo.game_rating_category.name %>
          <%= rating.game_rating_combo.value %>
        </li>
      </ul>
      <% end %>
  </div>
  <p>Publisher:<%= @game.publisher.name %></p>
  <p>Developer:<%= @game.developer.name %></p>
</div>
<p>Review <%= @game.review %></p>
